<p>
  <b>Image:</b><br>
  <%= image_tag @product.image.url(:medium) %>
</p>
<p>
  <b>Product name:</b><br>
  <%= @product.name %>
</p>
<p>
  <b>Description:</b><br>
  <%= @product.description %>
</p>
<p>
  <b>Price</b><br>
  <%= @product.price %>
</p>

<% if current_user && !current_user %>
	  <%= link_to 'Add to order', line_items_path(product_id: @product.id), method: :post %>
<% end %>

<% if current_user.admin == true %>
	<%= link_to 'Edit product', edit_product_path(@product) %>
<% end %>

<%= link_to 'Back', products_path %>
