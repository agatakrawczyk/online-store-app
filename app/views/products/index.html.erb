<h2>Products:</h2>

<% if current_user && !current_user.admin %>
  <%= link_to 'Show shopping cart', cart_path(@cart.id) %> <br><br>
<% end %>

<table>
  <tr>
		<th>Image:</th>
    <th>Product name:</th>
    <th>Description:</th>
    <th>Price:</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @products.each do |product| %>
    <tr>
			<% if product.image.present? %>
				<td><%= image_tag product.image.url(:thumb) %></td>
			<% end %>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
      <td><%= link_to 'Show', product_path(product) %></td>
			<% if current_user && current_user.admin %>
	      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      	<td><%= link_to 'Delete', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% elsif current_user && !current_user.admin %>
        <td><%= link_to 'Add to shopping cart', line_items_path(product_id: product.id), method: :post %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<% if current_user && current_user.admin %>
  <h3>Add new product: </h3>
  <%= link_to 'New product', new_product_path %>
<% end %>