<div class="container-fluid">   
  <div class="card mt-4 mx-auto registration">
    <div class="card-body">
      
      <h4 class="card-title text-center">Log in</h4>

      <div class="col-sm">  
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>
          <%= devise_error_messages! %>
      
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", required: true, minlength: 6, class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div>
            <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
            <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
            <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
          </div>
      
          <div class="form-group">
            <%= f.submit "Log in", class: "btn btn-secondary btn-lg"  %>
          </div>
      
          <div class="form-group">
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>  
      
    </div>
  </div>
</div>

