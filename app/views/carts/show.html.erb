<h2> My basket </h2>

<table>
  <tr>
		<th>Image:</th>
    <th>Product:</th>
    <th>Price:</th>
		<th>Quantity:</th>
  </tr>
  <% @line_items.each do |line_item| %>
    <tr>
			<td><%= image_tag(line_item.product.image) if line_item.product.image.attached? %></td>
      <td><%= line_item.product.name %></td>
      <td><%= line_item.product.price %></td>
			<td><%= line_item.quantity %></td>
      <td><%= link_to 'Remove', line_item_path(line_item.id), method: :delete %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', products_path %>
